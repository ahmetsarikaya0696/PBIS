                                                    <input class="form-control" asp-for="CreateOrganizasyonVM.Aciklama_TR" />
                                                </div>

                                                <div class="fv-row w-100">
                                                    <label asp-for="CreateOrganizasyonVM.Aciklama_EN" class="form-label">Açıklama (EN)</label>
                                                    <input class="form-control" asp-for="CreateOrganizasyonVM.Aciklama_EN" />
                                                </div>
                                            </div>

